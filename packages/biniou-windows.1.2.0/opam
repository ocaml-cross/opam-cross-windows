build: [
  ["sh" "-c" "env PATH=%{prefix}%/windows-sysroot/bin/:$PATH OCAMLFIND_TOOLCHAIN=windows jbuilder build -p biniou -j %{jobs}%"]
  ["env" "OCAMLFIND_TOOLCHAIN=windows" "jbuilder" "install" "--prefix=%{prefix}%/windows-sysroot" "-p" "biniou"]
]

depends: [
  "ocaml-windows"
  "conf-which" {build}
  "jbuilder" {build}
  "easy-format-windows"
]
