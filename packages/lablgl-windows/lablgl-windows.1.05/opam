  ["env" "OCAMLFIND_TOOLCHAIN=windows" make "install" "-C" "src"]
  ["env" "OCAMLFIND_TOOLCHAIN=windows" make "install" "-C" "LablGlut/src"]
]
remove: [["ocamlfind" "-toolchain" "windows" "remove" "lablgl"]]
