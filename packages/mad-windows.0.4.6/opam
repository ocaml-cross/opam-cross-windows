build: [
  ["./configure" "--host=%{conf-gcc-windows:host}%" "--prefix=%{prefix}%" "OCAMLFIND_TOOLCHAIN=windows"]
  [make]
]
install: [
  ["env" "OCAMLFIND_TOOLCHAIN=windows"
   make "install"]
]
remove: ["ocamlfind" "-toolchain" "windows" "remove" "mad"]
depends: [
  "ocaml"
  "ocaml-windows"
  "ocamlfind" {build}
]
