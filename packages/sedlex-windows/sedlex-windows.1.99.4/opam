depends: ["ocaml-windows"
          "ocamlfind" {build}
          "ppx_tools_versioned-windows"
          "ppx_tools_versioned" {build}
          "ocaml-migrate-parsetree-windows"
          "gen" {build}
          "gen-windows"
         ]
