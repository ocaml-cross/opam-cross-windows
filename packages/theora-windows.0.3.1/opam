build: [
  ["./configure" "--host=%{conf-gcc-windows:host}%" "--prefix=%{prefix}%" "OCAMLFIND_TOOLCHAIN=windows"]
  [make]
]
install: [
  ["env" "OCAMLFIND_TOOLCHAIN=windows"
   make "install"]
]
remove: ["ocamlfind" "-toolchain" "windows" "remove" "theora"]
depends: [
  "ocaml"
  "ocaml-windows"
  "ocamlfind" {build}
  "ogg-windows"
]
bug-reports: "https://github.com/savonet/ocaml-theora/issues"
dev-repo: "git+https://github.com/savonet/ocaml-theora.git"
synopsis:
  "Bindings for the theora library to decode video files in theora format"
